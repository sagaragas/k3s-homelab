{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    ':disableRateLimiting',
    ':semanticCommits',
  ],
  dependencyDashboard: true,
  dependencyDashboardTitle: 'Renovate Dashboard',
  suppressNotifications: [
    'prEditedNotification',
  ],
  // Auto-merge via PRs for most updates (required for protected branches)
  automerge: true,
  automergeType: 'pr',
  platformAutomerge: true,
  flux: {
    managerFilePatterns: [
      '/kubernetes/.+\\.ya?ml$/',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '/kubernetes/.+\\.ya?ml$/',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '/kubernetes/.+\\.ya?ml$/',
    ],
  },
  packageRules: [
    {
      description: 'Auto-merge all patch and minor updates',
      matchUpdateTypes: ['patch', 'minor'],
      automerge: true,
      automergeType: 'pr',
    },
    {
      description: 'Major updates need manual review (create PR)',
      matchUpdateTypes: ['major'],
      automerge: false,
      automergeType: 'pr',
    },
    {
      description: 'Talos updates need manual review (cluster critical)',
      matchPackageNames: ['/talos/', '/talhelper/'],
      automerge: false,
    },
    {
      description: 'Postgres major updates disabled (require data migration)',
      matchPackageNames: ['/postgres/'],
      matchUpdateTypes: ['major'],
      enabled: false,
    },
    {
      description: 'Group infrastructure updates',
      groupName: 'infrastructure',
      matchPackageNames: [
        '/cert-manager/',
        '/external-dns/',
        '/traefik/',
      ],
    },
  ],
}
